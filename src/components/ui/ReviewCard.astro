---
import IconStar from '@components/ui/icons/IconStar.astro';
const { review } = Astro.props;
---

<a href={review.data.url} target="_blank" rel="noopener">
  <article
    class="review-card"
    style={`background-color: var(--color-${review.data.color}-pastel);`}
  >
    <div class="rating">
      {Array.from({ length: review.data.rating }, (_) => <IconStar />)}
    </div>
    <p>{review.body}</p>
    <p class="author">
      <strong>{review.data.author}</strong>
    </p>
  </article>
</a>

<style>
  .review-card {
    padding: 2rem 1.5rem;

    background-color: var(--color-blue-pastel);
    border-radius: 1rem;
    height: fit-content;

    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .rating {
    font-size: 0.9rem;
    display: flex;

    /* padding: 0.2rem; */
    gap: 0.3rem;
  }

  .author {
    display: flex;
    flex-direction: column;
    /* gap: 0.2rem; */
  }

  .author::before {
    content: 'â€”';
    font-weight: var(--font-weight-bold);
    display: block;
  }
</style>
